rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to upload to volunteer-opportunities folder
    match /volunteer-opportunities/{fileName} {
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to upload to other specific folders
    match /{folder}/{fileName} {
      allow write: if request.auth != null && folder in ['volunteer-opportunities', 'orphanages', 'users', 'success-stories'];
    }
  }
}
