rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Only authenticated users can write to the bucket
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
